{
  "name": "terminal-img-paste",
  "displayName": "Terminal Image Paste",
  "description": "Paste clipboard images into VS Code terminal as file paths â€” works with CLI tools like Claude Code that accept image paths",
  "version": "0.0.1",
  "publisher": "terminal-img-paste",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/terminal-img-paste/terminal-img-paste"
  },
  "keywords": [
    "clipboard",
    "image",
    "terminal",
    "paste",
    "screenshot",
    "vscode",
    "claude-code"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "icon": "assets/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "terminalImgPaste",
          "title": "Terminal Image Paste",
          "icon": "assets/icon.png"
        }
      ],
      "panel": [
        {
          "id": "terminalImgPastePanel",
          "title": "Image Drop",
          "icon": "assets/icon.png"
        }
      ]
    },
    "views": {
      "terminalImgPaste": [
        {
          "type": "webview",
          "id": "terminalImgPaste.dropZone",
          "name": "Drop Zone"
        }
      ],
      "terminalImgPastePanel": [
        {
          "type": "webview",
          "id": "terminalImgPaste.panelDropZone",
          "name": "Drop Zone"
        }
      ]
    },
    "commands": [
      {
        "command": "terminalImgPaste.pasteImage",
        "title": "Paste Clipboard Image to Terminal"
      },
      {
        "command": "terminalImgPaste.sendPathToTerminal",
        "title": "Send Image Path to Terminal"
      },
      {
        "command": "terminalImgPaste.showDiagnostics",
        "title": "Terminal Image Paste: Show Diagnostics"
      }
    ],
    "keybindings": [
      {
        "command": "terminalImgPaste.pasteImage",
        "key": "ctrl+alt+v",
        "mac": "cmd+alt+v",
        "when": "terminalFocus"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "terminalImgPaste.sendPathToTerminal",
          "when": "resourceExtname =~ /\\.(png|jpg|jpeg|gif|bmp|webp|svg)/i"
        }
      ]
    },
    "configuration": {
      "title": "Terminal Image Paste",
      "properties": {
        "terminalImgPaste.folderName": {
          "type": "string",
          "default": ".tip-images",
          "description": "Image storage folder relative to workspace"
        },
        "terminalImgPaste.maxImages": {
          "type": "number",
          "default": 20,
          "description": "Auto-delete oldest images beyond this count"
        },
        "terminalImgPaste.autoGitIgnore": {
          "type": "boolean",
          "default": true,
          "description": "Automatically add image folder to .gitignore"
        },
        "terminalImgPaste.sendNewline": {
          "type": "boolean",
          "default": false,
          "description": "Auto-press Enter after inserting path into terminal"
        },
        "terminalImgPaste.saveFormat": {
          "type": "string",
          "enum": ["auto", "png", "jpeg"],
          "default": "auto",
          "description": "Image save format. 'auto' preserves native format, 'png' or 'jpeg' forces conversion."
        },
        "terminalImgPaste.filenamePattern": {
          "type": "string",
          "default": "img-{timestamp}",
          "description": "Filename pattern for saved images. Placeholders: {timestamp}, {date}, {time}, {n}, {hash}"
        },
        "terminalImgPaste.organizeFolders": {
          "type": "string",
          "enum": ["flat", "daily", "monthly"],
          "default": "flat",
          "description": "How to organize saved images. 'flat' puts all images in the root folder. 'daily' creates YYYY-MM-DD subdirectories. 'monthly' creates YYYY-MM subdirectories."
        },
        "terminalImgPaste.warnOnRemote": {
          "type": "boolean",
          "default": true,
          "description": "Show a warning when pasting clipboard images in a remote terminal (SSH, container, etc.) since the saved path may not be accessible remotely."
        },
        "terminalImgPaste.showPreview": {
          "type": "boolean",
          "default": false,
          "description": "Show a preview of the clipboard image before saving. When enabled, a confirmation dialog appears so you can verify the image before pasting."
        },
        "terminalImgPaste.notifications": {
          "type": "string",
          "enum": ["all", "errors", "none"],
          "default": "all",
          "description": "Control notification verbosity. 'all' shows all messages (status bar, warnings, errors). 'errors' suppresses success and warning messages; only shows errors. 'none' routes all feedback to the output channel only."
        }
      }
    }
  },
  "scripts": {
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:integration": "RUN_INTEGRATION=1 vitest run --config vitest.integration.config.ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.0.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.0.0",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^2.0.0"
  }
}